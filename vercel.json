{
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "includeFiles": ["package.json", "package-lock.json"]
      },
      "build": "npm run build --prefix frontend",
      "routes": [{ "src": "/(.*)", "dest": "frontend/dist/$1" }]
    }
  ],
  "routes": [{ "src": "/api/(.*)", "dest": "/backend/server.js" }],
  "functions": {
    "postinstall": {
      "runtime": "vercel-node@0.10.0",
      "handler": "index.postinstall"
    }
  }
}
